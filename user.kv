<UserScreen>:
    BoxLayout:
        orientation: 'vertical'

        # Header dengan logo dan teks "Happy Holiday"
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.2
            padding: [10, 10]
            spacing: 10
            canvas.before:
                Color:
                    rgba: 0.9, 0.9, 1, 1  # Warna latar biru muda
                Rectangle:
                    size: self.size
                    pos: self.pos

            Label:
                text: "Happy\nHoliday"
                font_size: 24
                color: 1, 0.6, 0.6, 1
                halign: 'left'
                valign: 'middle'
                text_size: self.size

            Image:
                source: 'gambar/logo.jpg'
                size_hint_x: 0.3
                allow_stretch: True

        # Pencarian kota
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            padding: [10, 5]
            spacing: 10

            TextInput:
                id: search_input
                hint_text: "Masukkan nama kota..."
                size_hint_x: 0.8
                height: 30

            Button:
                text: "Cari"
                size_hint_x: 0.2
                on_press: root.search_city(self)

        # Daftar tempat wisata
        GridLayout:
            cols: 3
            spacing: 10
            padding: [10, 10]
            size_hint_y: 0.7

            # Tempat 1
            BoxLayout:
                orientation: 'vertical'
                Image:
                    source: 'gambar/umbul ponggok.jpg'
                    allow_stretch: True
                    on_touch_down: lambda instance, touch: root.on_image_click(instance, touch, 'gambar/umbul ponggok.jpg', 'Umbul Ponggok', 'Umbul Ponggok adalah tempat wisata alam dengan air jernih untuk berenang dan snorkeling.')
                Label:
                    text: "Umbul Ponggok"
                    font_size: 12
                    halign: 'center'
                    valign: 'middle'
                    size_hint_y: None
                    height: 20

            # Tempat 2
            BoxLayout:
                orientation: 'vertical'
                Image:
                    source: 'gambar/soko langit.jpg'
                    allow_stretch: True
                    on_touch_down: lambda instance, touch: root.on_image_click(instance, touch, 'gambar/soko langit.jpg', 'Soko Langit', 'Soko Langit adalah tempat wisata dengan pemandangan alam pegunungan yang memukau.')
                Label:
                    text: "Soko Langit"
                    font_size: 12
                    halign: 'center'
                    valign: 'middle'
                    size_hint_y: None
                    height: 20

            # Tempat 3
